---
import { Image } from 'astro:assets';
import InfoLayout from "../layouts/InfoLayout.astro";
import Docweb from "../assets/medical-landing.png";
import Schedulink from "../assets/schedulink.webp";

const projects = [
     {
          title: "Docweb",
          description: "Developed a landing page for doctor's office using Astro, Tailwind CSS, and TypeScript.",
          image: Docweb
     },
     {
          title: "Schedulink",
          description: "Designed a SaaS scheduling app for managing the duty roster and holidays of a medical team.",
          image: Schedulink
     }];
---

<InfoLayout>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
        <h1 class="text-4xl md:text-6xl lg:text-8xl tracking-tighter text-balance text-white" style="font-family: -apple-system, 'SF Pro Display', 'San Francisco', BlinkMacSystemFont, system-ui, sans-serif; font-weight: 550;">
				Projects
		</h1>

          <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-16 sm:gap-8">
               {projects.map((project) => (
                    <li>
                         <Image src={project.image} alt={project.title} class="aspect-[1/1.33] object-center object-cover rounded-lg shadow-lg mb-4 sm:mb-0 sm:mr-4" />
                         <div class="p-1 sm:p-2">
                              <h2 class="text-base text-zinc-100">{project.title}</h2>
                              <p class="text-sm text-zinc-400 text-balance">{project.description}</p>
                         </div>
                    </li>
               ))}
          </ul>
     </div>
</InfoLayout>